#include<bits/stdc++.h>
using namespace std;
#include<iostream>
#include <map>
#include<vector>
#define rep(i,n) for(int i=0;i<n;i++)
#define ll long long
int main(){
  ll K;
  cin>>K;
  vector<int>ans;
  while(K){
    if(K%2==0) ans.push_back(0);
    else ans.push_back(2);
    
    K/=2;
  }
  
  for (auto i = ans.rbegin(), e = ans.rend(); i != e; ++i) cout<<*i;
  return 0;
}
